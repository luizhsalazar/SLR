<%= form_for(@protocol) do |f| %>
  <% if @protocol.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@protocol.errors.count, "error") %> prohibited this protocol from being saved:</h2>

      <ul>
      <% @protocol.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="panel panel-default">
      <div class="panel-body">
        <div class="panel panel-default" align="left"><b> Título </b>
          <div class="panel-body">
              <div class="form-group">
                <%= f.text_field :title, class: "form-control" %>
              </div>
          </div>
        </div>
        <div class="panel panel-default" align="left"><b> Contextualização </b>
          <div class="panel-body">
              <div class="form-group">
                <%= f.text_area :background, rows: "10", class: "form-control" %>
              </div>
          </div>
        </div>

        <div class="panel panel-default" align="left"><b> Pergunta de Pesquisa </b>
          <div class="panel-body">
              <div class="form-group">
                <%= f.text_area :research_question, class: "form-control" %>
              </div>
          </div>
        </div>
        <div class="panel panel-default" align="left"><b> Estratégia de busca </b>
          <div class="panel-body">
            <div class="form-group">
              <%= f.label :descrição %><br>
              <%= f.text_area :strategy, rows: "5", class: "form-control" %><br>

              <%= f.label :ano_de_publicação %><br>
              <div class="container-fluid">
                <table>
                  <tr>
                    <td>
                      De: <%= f.select(:from, options_for_select(
                                                    [[2015], [2014], [2013], [2012], [2011],[2010], [2009], [2008], [2007], [2006],
                                                     [2005], [2004], [2003], [2002], [2001],[2000], [1999], [1998], [1997], [1996],
                                                     [1995], [1994], [1993], [1992], [1991],[1990], [1989], [1988], [1987], [1986],
                                                     [1985], [1984], [1983], [1982], [1981],[1980], [1970], [1960], [1950], [1940]
                                                    ]))
                    %>
                    </td>
                    <td>  </td>
                    <td>
                      &nbsp Até: <%= f.select(:to, options_for_select(
                                                   [[2015], [2014], [2013], [2012], [2011],[2010], [2009], [2008], [2007], [2006],
                                                    [2005], [2004], [2003], [2002], [2001],[2000], [1999], [1998], [1997], [1996],
                                                    [1995], [1994], [1993], [1992], [1991],[1990], [1989], [1988], [1987], [1986],
                                                    [1985], [1984], [1983], [1982], [1981],[1980], [1970], [1960], [1950], [1940]
                                                   ]))
                    %>
                    </td>
                  </tr>
                </table>

                <br>
              </div>

              <%= f.label :bases_digitais %>  <br>
              <div class="container-fluid">
                <%= f.check_box :ieee, {:checked=> true} %> IEEE Xplore <br>
                <%= f.check_box :science_direct, {:checked=> true} %> Science Direct <br>
                <%= f.check_box :scopus, {:checked=> true} %> Scopus <br>
                <%= f.check_box :acm, {:checked=> true} %> ACM Digital Library <br>

                <%= f.check_box :springer, {:checked=> true} %> Springer Digital Library <br>
              </div>
              <br>

              <%= f.label :resultados_a_serem_retornados %><br>
              <div class="container-fluid">
                Resultado máximo a ser retornado: <%= f.select(:results_returned, options_for_select([[20], [40], [60], [80], [100] ])) %>
              </div>

            </div>
          </div>
        </div>
        <div class="panel panel-default" align="left"><b> Critérios de Inclusão/Exclusão </b>
          <div class="panel-body">
            <div class="form-group">
              <%= f.text_area :criteria, rows: "10", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="panel panel-default" align="left"><b> String de busca </b> <i>(Não utilizar acentuação nos termos!)</i>
          <table class="table">
            <tr>
              <th>  </th>
              <th> Termos </th>
              <th>  </th>
              <th>  </th>
              <th>  </th>
              <th>  </th>
              <th>  </th>
              <th>  </th>
              <th>  </th>
              <th> Sinônimos </th>
              <th>  </th>
              <th>  </th>
              <th>  </th>
              <th>  </th>
              <th>  </th>
              <th> Tradução (Inglês) </th>
            </tr>
          </table>
          <div>
            <%= f.fields_for :terms do |builder| %>
                <%= render 'term_fields', :f => builder %>
            <% end %>
          </div>
          <div>
            <%= link_to_add_fields (button_to "Adicionar termos", class: "btn btn-primary" ), f, :terms %>
          </div>
        </div>
        <br>

        <div class="panel panel-default" align="left"><b> Critérios de Qualidade </b>
          <div class="panel-body">
            <div class="form-group">
              <%= f.text_area :quality, rows: "10", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>
      </div>
    </div>

<% end %>
