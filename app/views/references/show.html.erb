<br>

<ol class="breadcrumb">
  <li><%= link_to 'Protocolo', protocol_path %></li>
  <li><%= link_to 'Execução da Busca', search_protocol_path %></li>
  <li class="active"> Resultados Retornados </li>
</ol>

<div class="container-fluid">
  <div class="table">
    <table class="table table-hover">
      <tr>
        <th> Base Digital </th>
        <th> Resultados </th>
        <th> Data </th>
      </tr>
      <tr>
        <% Reference.all.each do |reference| %>
            <% if reference.protocol_id == params[:id] %>
              <tr>
                <td>
                  <%= link_to reference.database_name, ieee_path(reference.protocol_id) %>
                </td>
                <td>
                  <%= reference.results %>
                </td>
                <td>
                   <!-- FIXME: Se realizo a mesma busca duas vezes e o resultado é o mesmo, a data não é atualizada
                               pois os dados não foram alterados -->
                  <%= time_ago_in_words(reference.updated_at)%> ago
                </td>
              </tr>
            <% end %>
        <% end %>
      </tr>
    </table>
  </div>
</div>