<h2>Criar Conta</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

      <div id="border-form-div" >
        <div class="form-group">
          <%= f.label :nome %><br />
          <%= f.text_field :first_name, class: "form-control", autofocus: true %>
        </div>
        <div class="form-group">
          <%= f.label :sobrenome %><br />
          <%= f.text_field :last_name, class: "form-control", autofocus: true %>
        </div>
        <div class="form-group">
          <%= f.label :laboratório %><br />
          <%= f.text_field :lab, class: "form-control", autofocus: true %>
        </div>

          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: "form-control", autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.label :senha %>
            <% if @validatable %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
          </div>

          <div class="form-group">
            <%= f.label :confirmação_de_senha %><br />
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
          </div>

          <div class="form-group">
            <%= f.submit "Sign up", class: "btn btn-primary" %>
          </div>
      </div>
<% end %>

<%= render "devise/shared/links" %>